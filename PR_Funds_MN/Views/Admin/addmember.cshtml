@model PR_Funds_MN.new_addmember_only

@{
    ViewBag.Title = "addmember";
}
<h2 style="text-align: center; color: darkblue; font-family: Algerian">Add member</h2>

<h3 style="text-align:left;color:red">@ViewBag.namealreadyexist</h3>

<h3 style="text-align:left;color:red">@ViewBag.nonullvaluestoaddmember</h3>
<h3 style="text-align:left;color:green">@TempData["member_added"]</h3>


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "myform" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @ViewBag.Message
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <table style="width:auto; height:300px;align-items:center" align="center">
                <tr style="width: 50%;height:5% ">
                    <td>
                        @Html.LabelFor(model => model.name, "Member name:", new { @class = "control-label col-md-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.name)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.name)
                    </td>
                </tr>
                <tr style="width: 50%;height:5% ">
                    <td>
                        @Html.LabelFor(model => model.mobile_no, "Mobile No.:", new { @class = "control-label col-md-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.mobile_no)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.mobile_no)
                    </td>
                </tr>
                <tr style="width: 50%;height:5% ">
                    <td>
                        @Html.LabelFor(model => model.dt, "Date:", new { @class = "control-label col-md-2" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.dt)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.dt)
                    </td>
                </tr>
                <tr style="width: 50%;height:5% ">
                    <td colspan="2" align="center">
                        <input type="submit" value="Add" class="btn btn-success" />
                    </td>
                </tr>
            </table>
        </div>
    </div>

}


